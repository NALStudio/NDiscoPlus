@using NDiscoPlus.Code.LightHandlers

@typeparam T where T : LightHandlerConfig

@code {
    [Parameter, EditorRequired]
    public required T Config { get; set; }

    [Parameter, EditorRequired]
    public required Action SetCurrentProfileEdited { get; set; }

    public static Dictionary<string, object> CreateParametersDictionary(LightHandlerConfig config, Action setCurrentProfileEdited)
    {
        return new()
        {
            { nameof(Config), config },
            { nameof(SetCurrentProfileEdited), setCurrentProfileEdited }
        };
    }
}
